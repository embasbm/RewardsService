<h1>Rewards Service Suscriptions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Channel</th>
      <th>Expires on</th>
    </tr>
  </thead>

  <tbody>
    <% @suscriptions.each do |suscription| %>
      <tr>
        <td><%= suscription.customer.name %></td>
        <td><%= suscription.channel.theme %></td>
        <td><%= suscription.expire_date.strftime("%B %d, %Y") %></td>
        <td><%= link_to 'Edit', edit_suscription_path(suscription) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suscription', new_suscription_path, :class=>"btn btn-primary btn-lg active" %>